<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textSize="20sp"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/titleTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:text="@string/title" 
        />
    <LinearLayout
        android:id="@+id/mainLinearLayoutId"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextId"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >
        
        <RelativeLayout
            android:layout_width="match_parent"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"
        	android:gravity="center_horizontal"
        	android:orientation="horizontal" 
            >
	        <ImageView 
		        android:id="@+id/aImageViewId"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:scaleType="centerCrop"
		        android:src="@drawable/ic_launcher"
	        	/>
		    <RadioGroup
			    android:id="@+id/aRadioGroupId"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_toRightOf="@id/aImageViewId"
			    android:layout_margin="10dp"
			    android:orientation="horizontal"
			    >

			    <RadioButton 
			        android:id="@+id/a1RadioButtonId"
			        android:layout_width="fill_parent"
			        android:layout_weight="1"
			    	android:layout_height="wrap_content"
			    	android:button="@null"
			    	android:background="@drawable/rock"
			        />
			    <RadioButton 
			        android:id="@+id/a2RadioButtonId"
			        android:layout_width="fill_parent"
			        android:layout_weight="1"
			    	android:layout_height="wrap_content"
			    	android:button="@null"
			    	android:background="@drawable/paper"
			        />
				<RadioButton 
			        android:id="@+id/a3RadioButtonId"
			        android:layout_width="fill_parent"
			        android:layout_weight="1"
			    	android:layout_height="wrap_content"
			    	android:button="@null"
			    	android:background="@drawable/scissors"
			        />
			</RadioGroup>
			    
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"
        	android:gravity="center_horizontal"
        	android:orientation="horizontal" 
            >
	        <ImageView 
		        android:id="@+id/bImageViewId"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:scaleType="centerCrop"
		        android:src="@drawable/ic_launcher"
	        	/>
		    <RadioGroup
			    android:id="@+id/bRadioGroupId"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_toRightOf="@id/bImageViewId"
			    android:layout_margin="10dp"
			    android:orientation="horizontal"
			    >

			    <RadioButton 
			        android:id="@+id/b1RadioButtonId"
			        android:layout_width="fill_parent"
			        android:layout_weight="1"
			    	android:layout_height="wrap_content"
			    	android:button="@null"
			    	android:background="@drawable/rock"
			        />
			    <RadioButton 
			        android:id="@+id/b2RadioButtonId"
			        android:layout_width="fill_parent"
			        android:layout_weight="1"
			    	android:layout_height="wrap_content"
			    	android:button="@null"
			    	android:background="@drawable/paper"
			        />
				<RadioButton 
			        android:id="@+id/b3RadioButtonId"
			        android:layout_width="fill_parent"
			        android:layout_weight="1"
			    	android:layout_height="wrap_content"
			    	android:button="@null"
			    	android:background="@drawable/scissors"
			        />
			</RadioGroup>
			    
        </RelativeLayout>		
		
    </LinearLayout>
	
    <Button 
        android:id="@+id/okButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainLinearLayoutId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/ok"
        />
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:gravity="center_horizontal"
	    android:layout_below="@id/okButtonId"
	    >
        
        <LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:orientation="vertical" 
		    android:gravity="center_horizontal" 
		    >
			        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/choice_result"/>
	        
	        <TextView
	            android:id="@+id/choiceATextViewId"	            
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/choice_result"/>
	        
	        <TextView
	            android:id="@+id/choiceBTextViewId"	 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/choice_result"/>
	        
	    </LinearLayout>
	    
        <LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:orientation="vertical" 
		    android:gravity="center_horizontal" 
		    >
	        	        	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/result"/>
	        
	        <TextView
	            android:id="@+id/resultTextViewId"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/result"/>
	         
	    </LinearLayout>
	                               
    </LinearLayout>	


</RelativeLayout>
